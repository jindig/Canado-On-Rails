<h1><%= @todo_list.title %></h1>
<p> These are all the things I need to do today.</p>


<table class="todo_items">
	<thead>
		<tr>
			<th width:"25%">Done or Doing?></th>
			<th width:"65%">Task></th>
			<th width:"10%">Functions></th>

		</tr>
	</thead>
	<tbody>
	<% @todo_list.todo_items.each do |todo_item| %>
	<tr id="<%= dom_id(todo_item) %>">
	<td><%= todo_item.completed_at %></td>
	<td><%= todo_item.content %></td>
	<td> 
	<%= if todo_item.completed_at.blank? %>
	<%= "Mark Task Done", complete_todo_list_todo_item_path(todo_item), method: :patch%>
	<% end %>
	<%= link_to "Edit", edit_todo_list_todo_item_path(todo_item)%>
	<%= link_to "Delete", todo_list_todo_item_path(todo_item), method: :delete %>
	</td>
	</tr>
	<% end %>
	</tbody>
</table>

<p>
<%= link_to "New Todo Item", new_todo_list_todo_item_path %>
</p>
